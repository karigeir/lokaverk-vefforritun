extends layout

block content
  body(class='conv-body')
    header
      div(class='logo-title')
        img(class='logo' src='../images/arion2 - blackwhite.png' alt='arion-logo-color')
        h1(class='conv-title')= title
      h5(class='conv-back'): a(class='conv-back-link' href='/') Aftur á forsíðu
    div(class='table-cont')
      div(class='table-div')
        table
          thead
            tr
              td(class='td-left-header') Gjaldmiðill
              td(class='td-mid-left') Kaup
              td(class='td-mid') Sala
              td(class='td-mid-right') Breyting
              td(class='td-right') Reiknir
          tbody
            each currency in currencies
              tr
                td(class='td-left')
                  img(src='/images/' + currency.shortName + '.png' alt=currency.shortName + '-flag')
                  = ' ' + currency.shortName
                td(class='td-mid-left')= currency.bidValue
                td(class='td-mid')= currency.askValue
                td(class='td-mid-right')= currency.changeCur
                td(class='td-right'): input(id=currency.shortName type='text' placeholder=currency.bidValue onFocus='this.select()' onInput=currency.shortName.toLowerCase() + 'func()')
