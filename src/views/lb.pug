extends layout

block content
  body(class='conv-body')
    header
      div(class='logo-title')
        img(class='logo' src='../images/lblogo-roundedcorners.png')
        h1(class='conv-title')= title
      h5(class='conv-back'): a(class='conv-back-link' href='/') Aftur á forsíðu
    div(class='table-cont')
      div(class='table-div')
        table
          thead
            tr
              td(class='td-left') Gjaldmiðill
              td Kaup
              td Sala
              td Breyting
              td(class='td-right') Reiknir
          tbody
            tr
              td(class='td-left')
                img(src='/images/ISK.png')
                = ' ISK'
              td= '1'
              td= '1'
              td= '0'
              td(class='td-right'): input(id='ISK' type='text' placeholder='1' onFocus='this.select()' onInput='iskfunc()')
            each currency in currencies
              tr
                td(class='td-left')
                  img(src='/images/' + currency.shortName + '.png')
                  = ' ' + currency.shortName
                td= currency.bidValue
                td= currency.askValue
                td= currency.changeCur
                td(class='td-right'): input(id=currency.shortName type='text' placeholder=currency.bidValue onFocus='this.select()' onInput=currency.shortName.toLowerCase() + 'func()')
